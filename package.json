{
  "name": "mydevconnectorapp",
  "version": "1.0.0",
  "description": "Social Network Application",
  "engines": {
    "node": "10.9.0",
    "npm": "6.4.0"
  },
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
